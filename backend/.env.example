# Copy from project root .env or set your Neon URL
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# JWT (generate a random string for production)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# Server
PORT=3000

# Payment provider: dummy (default, no Stripe) or stripe
# PAYMENT_PROVIDER=dummy

# Stripe (required only when PAYMENT_PROVIDER=stripe)
# STRIPE_SECRET_KEY=sk_...
# STRIPE_WEBHOOK_SECRET=whsec_...  # for POST /api/v1/webhooks/stripe
